<h1 class="text-white" style="margin-bottom: 50px">Quản lý học kỳ</h1>

<div class="modal-content bg-white" style="height: 100px; margin-bottom: 50px;">
    <form method="get" class="d-flex gap-2 align-items-center mb-3" style="max-width: 600px; margin-top: 30px; margin-left: 30px">
        <input type="text" name="searchTen" class="form-control" placeholder="Tên học kỳ" value="@searchTen" />
        <select name="trangThai" class="form-select" style="width: 150px;">
            <option value="">-- Trạng thái --</option>
            <option value="true" selected="@(ViewBag.TrangThai?.ToString() == "True" ? "selected" : null)">Hoạt động</option>
            <option value="false" selected="@(ViewBag.TrangThai?.ToString() == "False" ? "selected" : null)">Ngừng</option>
        </select>
        <button type="submit" class="btn btn-primary">Lọc</button>
    </form>

</div>

    <div class="modal-content bg-white">

<h2 class="text-primary" style="margin: 20px">Danh sách Học kỳ</h2>

    <div class="d-flex justify-content-end mb-3">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalFormCreate" style="width: 10%; margin: 30px;">
            <i class="bi bi-plus-circle"></i> Thêm học kỳ
        </button>
    </div>

<div class="container">

    <div class="table">
                <table class="table table-striped table-bordered table-hover">
            <thead class="table-primary">
                <tr>
                    <th class="text-nowrap">Tên học kỳ</th>
                    <th class="text-nowrap">Ngày tạo</th>
                    <th class="text-nowrap">Trạng thái</th>
                    <th class="text-nowrap">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TenHocKy</td>
                        <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                        <td>
                            <form asp-action="ToggleStatus" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.IdHocKy" />
                                <div class="form-check form-switch justify-content d-flex align-items-center">
                                    <input class="form-check-input" type="checkbox" name="TrangThai"
                                           onchange="this.form.submit()" @(item.TrangThai ? "checked" : "") />
                                    <label class="form-check-label ms-2">
                                        @(item.TrangThai ? "Đang hoạt động" : "Ngừng")
                                    </label>
                                </div>
                            </form>
                        </td>
                        <td>
                            <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#modalFormEdit_@item.IdHocKy">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </button>
                        </td>
                    </tr>

                    <!-- Modal Edit -->
                    <div class="modal fade" id="modalFormEdit_@item.IdHocKy" tabindex="-1" aria-labelledby="editModalLabel_@item.IdHocKy" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <form asp-action="Edit" method="post">
                                    <div class="modal-header bg-primary text-white">
                                        <h5 class="modal-title" id="editModalLabel_@item.IdHocKy">Chỉnh sửa học kỳ</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <input type="hidden" name="IdHocKy" value="@item.IdHocKy" />
                                        <div class="mb-3">
                                            <label class="form-label">Tên học kỳ</label>
                                            <input type="text" class="form-control" name="TenHocKy" value="@item.TenHocKy" required />
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>

    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { searchTen = searchTen, trangThai = trangThai, page = currentPage - 1 })">Trước</a>
            </li>
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { searchTen = searchTen, trangThai = trangThai, page = i })">@i</a>
                </li>
            }
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { searchTen = searchTen, trangThai = trangThai, page = currentPage + 1 })">Sau</a>
            </li>
        </ul>
    </nav>

<!-- Modal Create -->
<div class="modal fade" id="modalFormCreate" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="createModalLabel">Thêm học kỳ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("Create", new API.Data.HocKy())
            </div>
        </div>
    </div>
</div>
</div>
</div>