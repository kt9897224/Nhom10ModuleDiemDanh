@model List<API.Data.HocKy>

<h2>Danh sách Học kỳ</h2>

<a asp-action="Create">Thêm mới</a>

<table>
    <thead>
        <tr>
            <th>Tên học kỳ</th>
            <th>Ngày tạo</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenHocKy</td>
                <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                <td>@(item.TrangThai ? "Đang hoạt động" : "Ngừng")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdHocKy">Sửa</a> |
                    <a asp-action="ChangeStatus" asp-route-id="@item.IdHocKy">Đổi trạng thái</a>
                </td>
            </tr>
        }
    </tbody>
</table>
