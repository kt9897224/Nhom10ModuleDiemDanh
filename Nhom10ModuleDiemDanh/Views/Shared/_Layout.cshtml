<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - DD10 Hệ Thống</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- CSS thư viện -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
        <a class="navbar-brand" href="/">DD10</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="/Dashboard">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" href="/Account/Profile">Tài khoản</a></li>
            </ul>
            <span class="text-white me-2">Xin chào: @User.Identity?.Name</span>
            <a class="btn btn-outline-light btn-sm" href="/Login/Logout">Đăng xuất</a>
        </div>
    </nav>

    <!-- Nội dung chính -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center py-3 mt-4">
        <small>© 2025 DD10 App - Powered by FPT Polytechnic</small>
    </footer>

    <!-- JS thư viện -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
