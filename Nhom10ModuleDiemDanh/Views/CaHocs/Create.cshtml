@model API.Data.CaHoc
@{
    ViewData["Title"] = "Thêm ca học mới";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="TenCaHoc" class="form-label"></label>
            <input asp-for="TenCaHoc" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="ThoiGianBatDau" class="form-label"></label>
            <input asp-for="ThoiGianBatDau" type="time" step="1" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="ThoiGianKetThuc" class="form-label"></label>
            <input asp-for="ThoiGianKetThuc" type="time" step="1" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="TrangThai" class="form-label">Trạng thái</label>
            <select asp-for="TrangThai" class="form-select">
                <option value="1">Hoạt động</option>
                <option value="0">Không hoạt động</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success">Tạo</button>
        <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
    </form>
</div>
