@model API.Data.BanDaoTao
@{
    Layout = null;
}

<form asp-action="Edit" asp-route-id="@Model.IdBanDaoTao" method="post">
    <input type="hidden" asp-for="IdBanDaoTao" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TenBanDaoTao"></label>
        <input asp-for="TenBanDaoTao" class="form-control" />
        <span asp-validation-for="TenBanDaoTao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaBanDaoTao"></label>
        <input asp-for="MaBanDaoTao" class="form-control" />
        <span asp-validation-for="MaBanDaoTao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>


    <div class="mt-3">
        <button type="submit" class="btn btn-warning">Cập nhật</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
    </div>
</form>